{
  "manifest_version": 3,
  "name": "YT Bulk Manager",
  "version": "1.0.0",
  "description": "Gerencie e cancele inscrições do YouTube em massa - sem OAuth necessário",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'"
  },
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "1-main.js",
        "2-dom.js",
        "3-folders.js",
        "4-export.js",
        "5-ui.js",
        "6-events.js",
        "7-styles.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_icon": {
      "48": "icons/icon-48.png"
    },
    "default_title": "YouTube Bulk Editor"
  }
}